page {
  height: 100%;
  width: 100%;
}

/* 定制UI */
.necall-callee-info-warpper {
  text-align: center;
  padding-top: 150px;
}
.necall-callee-info-warpper .necall-callee-nickname, .necall-caller-nickname {
  color: #fff;
  font-size: 24px;
  margin-top: 10px;
  margin-bottom: 0;
  font-weight: 400;
}
.necall-callee-title {
  color: #fff;
  font-size: 16px;
  margin-bottom: 10px;
}
.necall-callee-info-warpper .necall-callee-tips, .necall-caller-tips {
  color: #fff;
  font-weight: 400;
  opacity: 0.55;
  font-size: 16px;
} 
.necall-avatar {
  width: 136px;
  height: 136px;
}
.necall-btn {
  color: #fff;
}
.necall-page-bg {
  position: absolute;
  width: 100%;
  height: 100%;
  z-index: -1;
}
.necall-bg-mask {
  position: absolute;
  width: 100vw;
  height: 100vh;
  background: rgba(0, 0, 0, 0.6);
  backdrop-filter: blur(48px);
}
.necall-bg-image {
  width: 100%;
  height: 100vh;
}
.pusher, .player {
  width: 100%;
  height: 100%;
  background-color: #292932;
}
.necall-large-view .icon-fullscreen {
  display: none;
}

.necall-container,
.necall-invite-container,
.necall-be-invited-container,
.necall-in-call-container {
  position: absolute;
  height: 100%;
  width: 100%;
  z-index: 1;
}

.necall-in-call-title {
  margin-top: 12px;
  margin-bottom: 4px;
  font-size: 16px;
  color: #fff;
  font-weight: 400;
  opacity: 0.55;
}

.necall-in-call-tips {
  color: #fff;
}

.necall-callee-info {
  position: absolute;
  right: 10px;
  top: 30px;
  color: #fff;
  text-align: right;
  display: flex;
  justify-content: end;
}

.necall-callee-avatar {
  width: 60px;
  height: 60px;
  margin-left: 10px;
  border-radius: 8px;
}

.necall-callee-nickname {
  font-size: 18px;
  margin-bottom: 5px;
}

.necall-caller-info {
  position: absolute;
  left: 50%;
  transform: translateX(-50%);
  top: 100px;
  color: #fff;
  text-align: center;
}

.necall-caller-avatar {
  width: 90px;
  height: 90px;
  border-radius: 8px;
}

/* .necall-caller-nickname {
  margin: 10px;
  font-size: 20px;
} */

.necall-calling-btn-group,
.necall-called-btn-group {
  padding: 0 20px;
  position: absolute;
  bottom: 100px;
  left: 50%;
  transform: translateX(-50%);
  width: 100%;
  display: flex;
  justify-content: space-around;
  align-items: center;
  color: #fff;
  text-align: center;
}

.necall-btn .necall-img {
  display: block;
  margin-bottom: 5px;
  width: 75px;
  height: 75px;
}

.necall-large-view {
  position: absolute;
  width: 100%;
  height: 100%;
  background-color: #292932;
}

.necall-small-view {
  position: absolute;
  top: 30px;
  right: 20px;
  width: 125px;
  height: 202px;
  z-index: 1;
  background-color: #292932;
  border: 1px solid #333;
}
.necall-player-video-mute-tips {
  position: absolute;
  top: 45%;
  width: 100%;
  color: #fff;
  text-align: center;
  font-size: 20px;
}
.necall-large-view .necall-player-video-mute-tips {
  height: 100vh;
}
.necall-small-view .necall-player-video-mute-tips {
  font-size: 13px;
}
.necall-pusher-video-mute-tips {
  position: absolute;
  top: 45%;
  width: 100%;
  font-size: 20px;
  text-align: center;
  color: #fff;
}
.necall-small-view .necall-pusher-video-mute-tips {
  font-size: 13px;
}
.necall-large-view .necall-pusher-video-mute-tips {
  height: 100vh;
}

.icon-fullscreen {
  width: 40rpx;
  height: 40rpx;
  position: absolute;
  bottom: 16rpx;
  left: 16rpx;
  z-index: 80;
  opacity: 0.7;
}

.necall-in-call-audio {
  position: absolute;
  left: 50%;
  transform: translateX(-50%);
  top: 100px;
  color: #fff;
  text-align: center;
}

.necall-in-call-avatar {
  width: 90px;
  height: 90px;
  border-radius: 8px;
}

.necall-in-call-btn-group {
  padding: 0 20px;
  position: absolute;
  bottom: 50px;
  left: 50%;
  transform: translateX(-50%);
  width: 224px;
  height: 60px;
  background: linear-gradient(180deg, #393947 6.82%, #292933 99.71%);
  box-shadow: inset 0px 1px 0px rgba(255, 255, 255, 0.0983938);
  border-radius: 30px;
  display: flex;
  justify-content: space-around;
  align-items: center;
  z-index: 10;
}

