.necall-in-call-duration {
  position: absolute;
  top: 35px;
  left: 56px;
  transform: translateX(-50%);
  color: #fff;
  z-index: 99;
}

.necall-microphone-btn {
  width: 24px;
  height: 24px;
}

.necall-switch-btn {
  width: 24px;
  height: 24px;
}

.necall-video-btn {
  width: 24px;
  height: 24px;
}

.necall-hangup-btn {
  width: 32px;
  height: 32px;
}