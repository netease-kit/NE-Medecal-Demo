<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:background="@color/color_white">

    <ImageView
        android:layout_width="@dimen/dp_60"
        android:layout_height="@dimen/dp_60"
        android:src="@drawable/icon_logo"
        android:layout_marginTop="@dimen/dp_50"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/medical_logo_desc"
        android:layout_marginTop="@dimen/dp_10"
        android:textColor="@color/color_333333"
        android:textSize="@dimen/text_size_24"
        />

    <LinearLayout
        android:id="@+id/ll_user_protocol"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_46"
        android:paddingHorizontal="@dimen/dp_20"
        android:layout_marginTop="@dimen/dp_20"
        android:gravity="center_vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/medical_user_protocol"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/text_size_16" />

        <View
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <ImageView
            android:layout_width="@dimen/dp_16"
            android:layout_height="@dimen/dp_16"
            android:src="@drawable/icon_arrow" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/color_F5F8FC"
        android:layout_marginHorizontal="@dimen/dp_20"
        />

    <LinearLayout
        android:id="@+id/ll_privacy_policy"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_46"
        android:paddingHorizontal="@dimen/dp_20"
        android:gravity="center_vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/medical_privacy_policy"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/text_size_16" />

        <View
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <ImageView
            android:layout_width="@dimen/dp_16"
            android:layout_height="@dimen/dp_16"
            android:src="@drawable/icon_arrow" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/color_F5F8FC"
        android:layout_marginHorizontal="@dimen/dp_20"
        />

    <LinearLayout
        android:id="@+id/ll_version"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_46"
        android:paddingHorizontal="@dimen/dp_20"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/tv_mine_sufferer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/medical_version"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/text_size_16" />

        <View
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/tv_version"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="V1.0"
            android:textColor="@color/color_666666"
            android:textSize="@dimen/text_size_16"
            />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/color_F5F8FC" />

</LinearLayout>