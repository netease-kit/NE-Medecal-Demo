<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/white"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/iv_icon"
        android:background="@drawable/icon_login"
        android:layout_marginTop="@dimen/dp_76"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="@dimen/dp_256"
        android:layout_height="@dimen/dp_240" />

    <TextView
        app:layout_constraintTop_toBottomOf="@+id/iv_icon"
        android:text="@string/medical_login_home_desc"
        android:gravity="center"
        android:textSize="@dimen/text_size_20"
        android:id="@+id/tv_desc"
        android:layout_marginTop="@dimen/dp_20"
        android:textColor="@color/color_333333"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <TextView
        app:layout_constraintTop_toBottomOf="@+id/tv_desc"
        android:layout_marginTop="@dimen/dp_46"
        android:layout_marginLeft="@dimen/dp_30"
        android:layout_marginRight="@dimen/dp_30"
        android:background="@drawable/selector_text_verification_code"
        android:text="@string/medical_verification_code"
        android:textColor="@color/white"
        android:textSize="@dimen/text_size_16"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:id="@+id/verification_code"
        android:layout_width="match_parent"
        android:gravity="center"
        android:layout_height="@dimen/dp_50" />

    <ImageView
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginBottom="@dimen/dp_40"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/login_logo"
        />
</androidx.constraintlayout.widget.ConstraintLayout>